#!/bin/sh

set -e

BREWFILE_TYPE="Brewfile"
parentDirectory="$(cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd -P)"
dotfilesDirectory="$(cd "$( dirname "$parentDirectory" )" && pwd -P)"

displayUsageAndExit() {
  echo "dot -- dotfiles management"
  echo ""
  echo "Usage: dot [options]"
  echo ""
  echo "Options:"
  echo "  -e, --edit    Open dotfiles directory for editing"
  echo "  -h, --help    Show this help message and exit"
  echo "  -s, --slim    Brewfile-Slim"
  echo "  -t, --type    Brewfile|Brewfile-Slim"
  exit
}

while test $# -gt 0; do
  case "$1" in
    "-h"|"--help")
      displayUsageAndExit
      ;;
    "-e"|"--edit")
      exec "$EDITOR" "$dotfilesDirectory"
      exit
      ;;
    "-s"|"--slim")
      BREWFILE_TYPE="Brewfile-Slim"
      shift
      ;;
    "-t"|"--type")
      if [[ "Brewfile-Slim" == $2 ]];
        then
          BREWFILE_TYPE="Brewfile-Slim"
      fi
      shift
      ;;
    *)
      echo "Invalid option: $1"
      displayUsageAndExit
      ;;
  esac
  shift
done

export ZSH=$HOME/.dotfiles

echo "â€º ğŸ’šï¸ macOS defaults"
$ZSH/config/macos.set-defaults.sh

echo "â€º ğŸºï¸ homebrew"
$ZSH/config/homebrew.install.sh $BREWFILE_TYPE 2>&1

echo "â€º ğŸ’½ï¸ install"
$ZSH/scripts/install

echo "â€º ğŸ› ï¸ config.setup.zsh"
$ZSH/scripts/zsh-config-setup
