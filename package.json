{
  "name": "@jeromefitz/dotfiles",
  "description": "Jerome Fitzgeraldâ€™s dotfiles",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/JeromeFitz/dotfiles"
  },
  "license": "MIT",
  "private": true,
  "bugs": {
    "url": "https://github.com/JeromeFitz/dotfiles/issues"
  },
  "author": {
    "name": "Jerome Fitzgerald",
    "email": "j@jeromefitzgerald.com",
    "url": "https://jeromefitzgerald.com"
  },
  "keywords": [
    "dotfiles"
  ],
  "scripts": {
    "bootstrap": "sh ./scripts/bootstrap",
    "build": "pnpm run bootstrap",
    "clean": "sh ./scripts/clean",
    "clean:install": "pnpm run clean && pnpm run uninstall && pnpm install && pnpm run bootstrap",
    "deduplicate": "npx pnpm-deduplicate",
    "deduplicate:check": "npx pnpm-deduplicate --list",
    "uninstall": "sh ./scripts/uninstall",
    "----": "",
    "postinstall": "is-ci || husky install",
    "postpublish": "pinst --enable",
    "preinstall": "npx only-allow pnpm",
    "prepublishOnly": "pinst --disable",
    "-----": "",
    "branch": "git-cz -m branch --allow-empty",
    "semantic-release": "semantic-release",
    "------": "",
    "lint:eslint": "eslint . --ext cjs,js,jsx,mjs,ts,tsx --max-warnings=0",
    "lint:fix": "pnpm run lint:eslint --fix && pnpm run lint:prettier --write",
    "lint:prettier": "prettier \"**/*.{cjs,js,jsx,mjs,ts,tsx,json,md,mdx,css,html,yml,yaml,scss}\"",
    "lint": "pnpm run lint:prettier --check && pnpm run lint:eslint",
    "pretty-quick": "pretty-quick"
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "7.18.10",
    "@babel/eslint-parser": "7.18.9",
    "@jeromefitz/conventional-gitmoji": "3.3.3",
    "@jeromefitz/eslint-config": "1.1.4",
    "@jeromefitz/git-cz": "14.4.1",
    "@jeromefitz/lint-staged": "1.1.2",
    "@jeromefitz/prettier-config": "1.1.1",
    "@jeromefitz/release-notes-generator": "1.2.3",
    "@jeromefitz/semantic": "9.2.3",
    "@jeromefitz/tsconfig": "1.1.1",
    "dotenv": "16.0.1",
    "husky": "8.0.1",
    "is-ci": "3.0.1",
    "pinst": "3.0.0",
    "rimraf": "3.0.2",
    "typescript": "4.6.4"
  },
  "config": {
    "commitizen": {
      "path": "git-cz"
    }
  }
}
